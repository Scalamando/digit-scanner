{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./build",
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["src/public"]
}
