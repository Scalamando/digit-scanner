{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"target": "ES2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./build",
		"baseUrl": "./",
		"strict": true
	},
	"lib": ["es2015"],
	"include": ["src/**/*"],
	"exclude": ["src/public"]
}
